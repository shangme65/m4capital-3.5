generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  name          String?
  email         String?          @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role             @default(USER)
  balances      AssetBalance[]
  transactions  Transaction[]
  manualUpdates ManualUpdateLog[]
  sessions      Session[]
  accounts      Account[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model AssetBalance {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  asset     String
  amount    Decimal  @db.Decimal(38, 18)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([userId, asset])
}

model Transaction {
  id          String      @id @default(cuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  type        TxType
  asset       String
  amount      Decimal      @db.Decimal(38, 18)
  status      TxStatus     @default(PENDING)
  reference   String?      @unique
  meta        Json?
  createdAt   DateTime     @default(now())
  processedAt DateTime?
}

model ManualUpdateLog {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  asset     String
  delta     Decimal  @db.Decimal(38, 18)
  reason    String
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum TxType {
  DEPOSIT
  WITHDRAW
  ADJUSTMENT
}

enum TxStatus {
  PENDING
  COMPLETED
  FAILED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id])
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}